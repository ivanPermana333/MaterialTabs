<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.materialtabs.fragments.TwoFragment"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnpersegi"
            android:layout_width="142dp"
            android:layout_height="102dp"
            android:layout_marginLeft="50dp"
            android:hint="Persegi"
            android:drawableLeft="@drawable/ic_crop_din_black_24dp"/>

        <Button
            android:id="@+id/btnsegitiga"
            android:layout_width="142dp"
            android:layout_height="102dp"
            android:layout_marginLeft="5dp"
            android:hint="Segitiga" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnlingkaran"
            android:layout_width="142dp"
            android:layout_height="102dp"
            android:layout_marginLeft="50dp"
            android:hint="Lingkaran" />

        <Button
            android:id="@+id/btnjajargenjang"
            android:layout_width="142dp"
            android:layout_height="102dp"
            android:layout_marginLeft="5dp"
            android:hint="Jajargenjang" />

    </LinearLayout>


</LinearLayout>
